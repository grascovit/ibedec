<% if flash.any? %>
  <div data-controller="flash-message" class="pointer-events-none fixed z-50 inset-x-0 bottom-0 sm:flex sm:justify-center sm:px-6 sm:pb-5 lg:px-8">
    <% flash.each do |kind, message| %>
      <div data-flash-message-target="message" class="<%= flash_background_color(kind:) %> pointer-events-auto flex items-center justify-between gap-x-6 px-6 py-2.5 sm:rounded-xl sm:py-3 sm:pl-4 sm:pr-3.5">
        <div class="flex items-center">
          <span class="flex rounded-lg <%= flash_icon_background_color(kind:) %> p-2">
            <%= flash_icon(kind:) %>
          </span>
          <p class="ml-3 font-medium text-white">
            <%= message.html_safe %>
          </p>
        </div>
        <button data-action="click->flash-message#dismiss" type="button" class="-m-1.5 flex-none p-1.5">
          <span class="sr-only">Dismiss</span>
          <%= svg_icon(name: 'x-mark', css_class: 'h-6 w-6 text-white') %>
        </button>
      </div>
    <% end %>
  </div>
<% end %>

<% if false %>
  <div class="bg-ibedec-blue-200 bg-ibedec-blue-600 bg-red-500 bg-red-600"></div>
<% end %>
