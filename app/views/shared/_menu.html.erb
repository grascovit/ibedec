<header data-controller="mobile-menu" class="absolute inset-x-0 top-0 z-50">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: '-m-1.5 p-1.5' do %>
        <span class="sr-only">IBEDEC</span>
        <%= vite_image_tag 'images/logo-small.png', class: 'h-16 w-auto rounded-md sm:h-20' %>
      <% end %>
    </div>
    <div class="flex lg:hidden">
      <button data-mobile-menu-target="openButton" data-action="click->mobile-menu#open" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to 'Início', root_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
      <%= link_to 'Sobre', about_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
      <%= link_to 'Notícias', posts_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Cartilhas e Manuais</a>
      <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Decisões</a>
      <%= link_to 'Contato', contact_path, class: 'text-sm font-semibold leading-6 text-gray-900' %>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div data-mobile-menu-target="menu" class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-100 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between sm:justify-end">
        <%= link_to root_path, class: '-m-1.5 p-1.5 sm:invisible' do %>
          <span class="sr-only">IBEDEC</span>
          <%= vite_image_tag 'images/logo-small.png', class: 'h-16 w-auto rounded-md sm:h-20' %>
        <% end %>
        <button data-mobile-menu-target="closeButton" data-action="click->mobile-menu#close" type="button" class="hidden -m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <%= link_to 'Início', root_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-200' %>
            <%= link_to 'Sobre', about_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-200' %>
            <%= link_to 'Notícias', posts_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-200' %>
            <a href="#" class="-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Cartilhas e Manuais</a>
            <a href="#" class="-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Decisões</a>
            <%= link_to 'Contato', contact_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-200' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
