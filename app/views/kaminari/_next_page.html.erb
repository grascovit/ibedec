<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% unless current_page.last? %>
  <%= link_to url, class: 'relative inline-flex items-center p-1 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0 sm:p-2', rel: 'next', remote: remote do %>
    <span class="sr-only">
      <%= t('views.pagination.next').html_safe %>
    </span>
    <%= svg_icon(name: 'chevron-right', css_class: 'h-5 w-5') %>
  <% end %>
<% end %>
