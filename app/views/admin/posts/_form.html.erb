<%= form_with(model: post, url: post.persisted? ? admin_post_path(post) : admin_posts_path, html: { class: 'space-y-6' }) do |form| %>
  <%= render 'shared/form/input', form: form, attribute: :title, kind: :text_field %>
  <%= render 'shared/form/quill', form: form, attribute: :body %>
  <%= render 'shared/form/input', form: form, attribute: :published_at, kind: :date_field %>
  <%= render 'shared/form/file_input', form: form, attribute: :cover_image %>
  <%= render 'shared/form/submit_button', form: form %>
<% end %>
